<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  <br />

  <%= f.label :artist_name %><br />
  <%= f.text_field :artist_name, list: "artists_autocomplete" %>
  <datalist id="artists_autocomplete">
    <% Artist.all.each do |artist| %>
      <option value="<%= artist.name %>">
    <% end %>
  </datalist>
  <br />

  <%= f.label :genre_name %><br />
  <%= f.text_field :genre_name, list: "genres_autocomplete" %>
  <datalist id="genres_autocomplete">
    <% Genre.all.each do |genre| %>
      <option value="genres_autocomplete">
    <% end %>
  </datalist>
  <br />

  <%= f.submit %>
<% end %>


